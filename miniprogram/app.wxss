.clearfix::after {
    visibility: hidden;
    display: block;
    font-size: 0;
    content: " ";
    clear: both;
    height: 0;
}
/* 底部 */
.footer_wrapper{
  position:fixed;
  left:0;
  bottom:0;
  width:100%;
  height:100rpx;
  background:#eee;
  border-top:1rpx solid #ccc;
}
.footer_item{
  float:left;
  width:25%;
  height:100rpx;
}
.footer_image_wrapper{
  padding-top:5rpx;
  box-sizing:border-box;
  display:block;
  margin:10rpx auto 0;
  width:50rpx;
  height:50rpx;
  border-radius:50%;
}
.footer_image_wrapper image{
  margin:0 auto;
  display:block;
  width:40rpx;
  height:40rpx;
}
.footer_item.active .footer_image_wrapper{
  background:#ffd700;
}
.footer_item text{
  display:block;
  width:100%;
  height:40rpx;
  line-height:40rpx;
  font-size:24rpx;
  text-align:center;
}