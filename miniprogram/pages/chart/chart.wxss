.chart_header{
  position:fixed;
  left:0;
  top:0;
  width:100%;
  height:180rpx;
  background:#ffd700;
}
.book_type_name{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  text-align:center;
  font-weight:bold;
}
.amttype_picker{
  position:relative;
  margin:0 auto;
  display:block;
  width:120rpx;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  text-align:center;
}
.amttype_picker::after{
  position:absolute;
  right:0;
  top:38rpx;
  content:'';
  width:0;
  height:0;
  border:10rpx solid transparent;
  border-top-color:#000;
}
.date_range_wrapper{
  margin:20rpx auto;
  width:400rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:30rpx;
  border:1rpx solid #000;
  border-radius:10rpx;
  overflow:hidden;
}
.date_range_wrapper text{
  float:left;
  width:50%;
  text-align:center;
}
.date_range_wrapper text:first-of-type{
  border-right:1rpx solid #000;
}
.date_range_wrapper text.active{
  background:#333;
  color:#ffd700;
}
.padding_180{
  width:100%;
  height:180rpx;
}
/* 账单列表 */
.book_list_wrapper{
  width:100%;
}
.book_list_item{
  width:100%;
  height:100rpx;
}
.book_list_title{
  float:left;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  font-size:30rpx;
  text-indent:20rpx;
  font-weight:bold;
}
.book_list_img_wrapper{
  float:left;
  padding:10rpx;
  margin:20rpx;
  width:60rpx;
  height:60rpx;
  border-radius:50%;
  background:#eee;
}
.book_list_img_wrapper image{
  display:block;
  width:40rpx;
  height:40rpx;
}
.book_list_item_info{
  float:left;
  width:620rpx;
  height:100rpx;
  border-bottom:1rpx solid #eee;
}
.book_list_item_top{
  padding-top:20rpx;
  width:100%;
  height:60rpx;
}
.book_list_item_name,.book_list_item_amt{
  float:left;
  width:300rpx;
  height:40rpx;
  line-height:40rpx;
  font-size:24rpx;
}
.book_list_item_amt{
  float:right;
  text-align:right;
}
.book_list_progress{
  display:block;
  height:12rpx;
  border-radius:6rpx;
  background:#ffd700;
}
